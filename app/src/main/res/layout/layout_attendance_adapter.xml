<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        app:cardCornerRadius="@dimen/five_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/viewAttDate"
                android:src="@drawable/camera" />

            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_below="@id/viewAttStartTime"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_toLeftOf="@id/toalWorkedHors"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/viewAttStartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewAttDate"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:text="@string/start_time"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/viewAttStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewAttStartText"
                android:layout_marginLeft="@dimen/thirty_five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:text="09:11 AM" />

            <TextView
                android:id="@+id/viewAttEndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewAttDate"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:text="@string/end_time" />

            <TextView
                android:id="@+id/viewAttShiftEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewAttEndText"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/thirty_five_dp"
                android:text="6:00 PM" />

            <TextView
                android:id="@+id/toalWorkedHors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewAttStartTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/thirteen_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:text="5h:20mon"
                />

            <TextView
                android:id="@+id/viewAttDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Date"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_below="@id/viewAttDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@color/gray" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>