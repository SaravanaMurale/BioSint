<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        app:cardCornerRadius="@dimen/five_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewChecInName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Check in Name"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                />
            <TextView
                android:id="@+id/viewChecInDetais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/viewChecInName"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/five_dp"
                />

            <TextView
                android:id="@+id/viewCheckInAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_below="@id/viewChecInName"
                android:layout_marginTop="@dimen/twenty_dp"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/five_dp"
                />

            <TextView
                android:id="@+id/viewCheckInDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewCheckInAddress"
                android:layout_centerHorizontal="true"
                android:text="08/10/2020"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>